<!----All Pages will take on the elemtnts that are put into this layout page-->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - IT Fair share</title>  <!---so this will take what each page says is its title plus -IT Share Fair-->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head> 
<!-- Each page will have a body with a navbar fixed at the top-->
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <!-----on mobile or of the page is too small you can have a button  (three icon bars) that will open up an options pane--->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button> 
                <!-----this button will be on the left-->
                @Html.ActionLink("IT Share Fair 2018", "Index", "Home", null, new { @class = "navbar-brand" })  <!----buton Text /  page to load nav bar brand is like an anchor that pulls it left ---->
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">    <!---Text , View, URL----->
                    <li>@Html.ActionLink("Results", "Dashboard", "Home")</li> <!---because these pages have nothing in their first field they cant be seen on the bar this ads the results page to bar---->
                    <li>@Html.ActionLink(" ", "error", "Home")</li><!-------this adds the ....Error... page to the bar ;) leave this one invisible for me - hi Doug--->
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
